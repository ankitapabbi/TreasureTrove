<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game_background_desert" />

    <!-- The GameView -->
    <com.lambtoncollege.treasuretrove.GameViewTwo
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- The TextView to display the score -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textColor="#EEC75B39"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#EEC75B39"
            android:textSize="22sp"
            android:text="0"
            android:background="#00000000" />
        <TextView
            android:id="@+id/lives"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="lives"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:layout_alignBottom="@+id/text_view_score"
            />
    </LinearLayout>



</FrameLayout>